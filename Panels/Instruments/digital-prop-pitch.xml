<?xml version="1.0"?>

<!--
     Propeller Pitch monitor instrument.
-->

<PropertyList>

  <name>Propeller Pitch Monitor display</name>
  <w-base>40</w-base>
  <h-base>10</h-base>

  <params>
    <eng-num>/engines/engine[0]/engine-num</eng-num>
    <pp-select>/engines/engine[0]/propeller-pitch</pp-select>
  </params>

  <layers>

    <layer>
      <name>background</name>
      <texture>
        <path>Aircraft/TU-114/Panels/Instruments/Textures/trans-grey-bg.rgb</path>
      </texture>
      <w>100</w>
      <h>16</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>50</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>8</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Engine index -->
    <layer>
      <name>Engine index title</name>
      <type>text</type>
      <point-size>10</point-size>
      <color>
        <red>0.8</red>
        <green>0.6</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>Eng:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>3</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>5</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Engine index</name>
      <type>text</type>
      <point-size>12</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property alias="../../../../../params/eng-num"/>
          <format>%01.0f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>30</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>4</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Prop Pitch -->
    <layer>
      <name>Prop Pitch title</name>
      <type>text</type>
      <point-size>10</point-size>
      <color>
        <red>0.8</red>
        <green>0.6</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>PP:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>48</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>5</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Prop Pitch display</name>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property alias="../../../../../params/pp-select"/>
          <format>%01.3f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>70</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>4</offset>
        </transformation>
      </transformations>
    </layer>
    
  </layers>

</PropertyList>
