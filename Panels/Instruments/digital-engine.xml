<?xml version="1.0"?>

<!--
     Engine monitor instrument.
-->

<PropertyList>

  <name>Engine Monitor display</name>
  <w-base>40</w-base>
  <h-base>10</h-base>

  <params>
    <eng-num>/engines/engine[0]/engine-num</eng-num>
    <ff-select>/engines/engine[0]/fuel-flow-gph</ff-select>
    <n2-select>/engines/engine[0]/n2</n2-select>
    <pt-select>/engines/engine[0]/prop-thrust</pt-select>
    <rpm-select>/engines/engine[0]/rpm</rpm-select>
    <th-select>/controls/engines/engine[0]/throttle</th-select>
    <torq-select>/engines/engine[0]/torque-ftlb</torq-select>
  </params>

  <layers>

    <layer>
      <name>background</name>
      <texture>
        <path>Aircraft/TU-114/Panels/Instruments/Textures/trans-grey-bg.rgb</path>
      </texture>
      <w>390</w>
      <h>16</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>195</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>8</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Engine index -->
    <layer>
      <name>Engine index title</name>
      <type>text</type>
      <point-size>10</point-size>
      <color>
        <red>1.0</red>
        <green>0.8</green>
        <blue>0.4</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>Eng:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>3</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>5</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Engine index</name>
      <type>text</type>
      <point-size>12</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property alias="../../../../../params/eng-num"/>
          <format>%01.0f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>30</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>4</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Throttle -->
    <layer>
      <name>Throttle title</name>
      <type>text</type>
      <point-size>10</point-size>
      <color>
        <red>1.0</red>
        <green>0.8</green>
        <blue>0.4</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>TH:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>48</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>5</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>Throttle display</name>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property alias="../../../../../params/th-select"/>
          <format>%01.3f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>70</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>4</offset>
        </transformation>
      </transformations>
    </layer>

<!-- RPM -->
    <layer>
      <name>RPM title</name>
      <type>text</type>
      <point-size>10</point-size>
      <color>
        <red>1.0</red>
        <green>0.8</green>
        <blue>0.4</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>RPM:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>106</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>5</offset>
        </transformation>
      </transformations>
    </layer>

    <layer>
      <name>RPM display</name>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>1.0</red>
        <green>1.0</green>
        <blue>1.0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property alias="../../../../../params/rpm-select"/>
          <format>%03.0f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>136</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>4</offset>
        </transformation>
      </transformations>
    </layer>

